<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_weight="3"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_marginLeft="10dp"

    android:layout_marginTop="5dp"
    android:gravity="center"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/store_icon"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shop name"
            android:textSize="17sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/txt_cust_shopname"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shop Phone"
            android:layout_marginRight="15dp"
            android:layout_marginStart="15dp"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:id="@+id/txt_cust_shopphone"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shop Phone"
            android:layout_marginStart="15dp"
            android:textSize="17sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/txt_cust_test"
            android:textColor="#000000"
            />
    </LinearLayout>
    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/img_shop_location"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_place"/>
</LinearLayout>