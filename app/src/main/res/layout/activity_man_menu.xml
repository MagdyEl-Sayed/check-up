<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.gm7.checkup.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ViewFlipper
            android:id="@+id/bckgrndViewFlipper1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bckgrndImageView8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/frame_back" />

            <ImageView
                android:id="@+id/bckgrndImageView7"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/frame2" />

            <ImageView
                android:id="@+id/bckgrndImageView6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/picture3" />

            <ImageView
                android:id="@+id/bckgrndImageView5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/picture4" />

        </ViewFlipper>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="20dp">
        <Button

            android:id="@+id/btn_shopping"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/shop"
            android:fontFamily="serif"
            android:gravity="start|center_vertical"
            android:text=" Shops"
            android:textAlignment="center"
            android:textColor="@color/dgts__purple_pressed"
            android:textSize="24sp"
            android:textStyle="normal|bold|italic"
            android:theme="@style/MyButton" />

        <Button

            android:id="@+id/btn_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/check_book"
            android:fontFamily="serif"
            android:gravity="start|center_vertical"
            android:text="Bill Report"
            android:textAlignment="center"
            android:textColor="@color/dgts__purple_pressed"
            android:textSize="24sp"
            android:textStyle="normal|bold|italic"
            android:theme="@style/MyButton" />

        <Button

            android:id="@+id/btn_salesItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/shopping_bag"
            android:fontFamily="serif"
            android:gravity="start|center_vertical"
            android:text="Sales Items"
            android:textAlignment="center"
            android:textColor="@color/dgts__purple_pressed"
            android:textSize="24sp"
            android:textStyle="normal|bold|italic"
            android:theme="@style/MyButton" />
    </LinearLayout>
</LinearLayout>