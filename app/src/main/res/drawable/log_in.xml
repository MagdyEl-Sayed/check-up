<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
        <gradient android:endColor="#000000" android:startColor="#000000" />

        <stroke android:width="2dp" android:color="#d2d3d3" />

        <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

        <corners android:radius="10dp" />
    </shape></item>
    <item android:state_focused="true"><shape>
        <gradient android:angle="90" android:endColor="#0c9fa9" android:startColor="#0c9fa9" />

        <stroke android:width="2dp" android:color="#d2d3d3" />

        <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

        <corners android:radius="10dp" />
    </shape></item>
    <item> <shape android:shape="rectangle">
            <gradient android:startColor="#0c9fa9" android:endColor="#0c9fa9"/>
            <corners android:radius="10dp"/>
            <stroke android:color="#d2d3d3" android:width="2dp"/>

        </shape></item>
</selector>